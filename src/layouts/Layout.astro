---
import Header from "@components/Header.astro";
import "@fontsource/forum";
import { SITE_CONFIG } from "@config";
import Footer from "@components/Footer.astro";

const {
  title,
  description,
  siteLogo,
  navLinks,
  lang,
  author,
  socialLinks,
} = SITE_CONFIG;

// Use Astro.site from astro.config.mjs for absolute URLs
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || "https://jaisleenportfolio.vercel.app";
const currentPageUrl = new URL(Astro.url.pathname, Astro.site).href;
const blankImageUrl = new URL("/blank.png", Astro.site).href;
---

<!doctype html>
<html lang={lang} class="scroll-pt-16 scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/jaisleen-small.png" />
    <link href="https://fonts.cdnfonts.com/css/glacial-indifference-2" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentPageUrl} />
    <meta property="og:image" content={blankImageUrl} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={currentPageUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={blankImageUrl} />
  </head>
  <body class="bg-black font-sans text-white">
    <Header siteLogo={siteLogo} navLinks={navLinks} />
    <main class="mx-auto max-w-3xl px-5">
      <slot />
    </main>
    <Footer author={author} socialLinks={socialLinks} />
  </body>
</html>
